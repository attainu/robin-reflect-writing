<%-include("partials/header.ejs")%>


<!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>REFLECT WRITING</h1>
            <span class="subheading">The internet has no eraser</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <% arr.forEach(function(post){ %>
            <div class="post-preview">

              <a href="/post/<%=post.post._id%>">
                <h2 class="post-title">
                  <%= post.post.title%>
                </h2>
                <h3 class="post-subtitle">
                  <%=post.post.subtitle%>
                </h3>
              </a>
              <p class="post-meta">Posted by
                <a href="#"><%=post.authordetail.username%></a>
                on <%=post.post.createdAt.toDateString()%>
              </p>
          </div>
          <hr>

        <% }) %>

        <!-- Pager -->
        <div class="clearfix">
          <a class="btn btn-primary float-right" href="#">New Posts &rarr;</a>
        </div>
      </div>
    </div>
  </div>

  <hr>

<%-include("partials/footer.ejs")%>
